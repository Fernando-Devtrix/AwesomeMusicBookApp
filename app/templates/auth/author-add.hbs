 <div class="container form-group row">
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          {{input id="first_name" type="text" value=first_name class="validate"}}
          <label for="first_name">First Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input id="last_name" type="text" value=last_name class="validate"}}          
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input id="nickname" type="text" value=nickname class="validate"}}
          <label for="nickname">Nickname</label>
        </div>
      </div> 
      <div class="col s4">
		 <button class="waves-effect waves-light btn" {{action 'addNewAuthor' model on='click'}}>Save</button>
	  </div>    
    </form>
  </div>
 </div>